@model Shop.Models.Order

@{
    ViewBag.Title = "Pay";
    Layout = "~/Views/Shared/_RightSectionLayout.cshtml";
}

@section SectionTitle{
    Uzupełnij dane zamówienia
}

<div class="container">
    <div class="row">
        @using (Html.BeginForm("Pay", "Cart", new { @class = "form-horizontal" }))
        {
            <fieldset>
                <!-- Form Name -->
                <legend>Order</legend>
                <!-- Text input-->
                <div class="form-group row">
                    @Html.LabelFor(o => o.Name, "Imię:", new { @class = "col-md-4 control-label" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(o => o.Name, new { @class = "form-control input-md", name = "textinputname", type = "text", placeholder = "Name", required = "" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(o => o.LastName, "Nazwisko:", new { @class = "col-md-4 control-label" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(o => o.LastName, new { @class = "form-control input-md ", name = "textinputforname", type = "text", placeholder = "Forname", required = "" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(o => o.Address, "Adres:", new { @class = "col-md-4 control-label", id = "textinputadres" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(o => o.Address, new { @class = "form-control input-md", id = "textinputadres", name = "textinputadres", type = "text", placeholder = "Adres", required = "" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(o => o.City, "Miasto:", new { @class = "col-md-4 control-label", id = "textinputcity" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(o => o.City, new { @class = "form-control input-md", id = "textinputcity", name = "textinputcity", type = "text", placeholder = "City", required = "" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(o => o.PostalCode, "Kod pocztowy:", new { @class = "col-md-4 control-label", id = "textinputkodpocztowy" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(o => o.PostalCode, new { @class = "form-control input-md", id = "textinputkodpocztowy", name = "textinputkodpocztowy", type = "text", placeholder = "Kod pocztowy", required = "" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(o => o.Phone, "Telefon:", new { @class = "col-md-4 control-label", id = "textinputphone" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(o => o.Phone, new { @class = "form-control input-md", id = "textinputphone", name = "textinputphone", type = "text", placeholder = "Phone number", required = "" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(o => o.Email, "Email:", new { @class = "col-md-4 control-label", id = "textinputemail" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(o => o.Email, new { @class = "form-control input-md", id = "textinputemail", name = "textinputemail", type = "text", placeholder = "Email", required = "" })
                    </div>
                </div>


                <div class="form-group row">
                    @Html.Label("Komentarz", new { @class = "col-md-4 control-label" })
                    <div class="col-md-4">
                        <textarea class="col-md-4 form-control input-md" id="textareaid" cols="40" rows="3" name="comment">@Model.Comment</textarea>
                    </div>
                </div>

                @Html.ValidationSummary()

                <!-- Button -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="singlebuttonsubmit"></label>
                    <div class="col-md-4">
                        <input type="submit" id="singlebuttonsubmit" name="singlebuttonsubmit" class="btn btn-primary" value="Submit" />
                    </div>
                </div>

            </fieldset>
        }
    </div>
</div>
