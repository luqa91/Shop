<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title — moja aplikacja platformy ASP.NET</title>




    <link href="@Url.Content("~/Content/navbarCart.css")" rel="stylesheet" />

    <link href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    @System.Web.Optimization.Styles.Render("~/Content/css")
    @System.Web.Optimization.Scripts.Render("~/bundles/modernizr")
    @System.Web.Optimization.Styles.Render("~/Content/themes/base/css")
</head>



<body>
    <header>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                        <img height="20" alt="Brand" src="">
                    </a>
                </div>

                <div class="navbar-collapse collapse" id="navbar-ex-collapse">
                    <ul class="nav navbar-nav navbar-left">
                        <li><a href="@Url.Action("Index", "Home")">Shop </a></li>
                        <li><a href="@Url.Action("Index", "Manage")"> Manage </a></li>
                        <li><a href="@Url.Action("ListOrder", "Manage")"> Zamówienia </a></li>
                        @if (@User.IsInRole("Admin"))
                        {
                            <li><a href="@Url.Action("AddProducts", "Manage")"> Dodaj </a></li>

                                <li><a href="@Url.Content("~/elmah")"> Logi </a></li>

                                    <li><a href="@Url.Content("~/hangfire")"> Jobs </a></li>
                        }
                    </ul>

                    @Html.Partial("_LoginPartial")

                        <ul class="nav navbar-nav navbar-right">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                                    <span class="glyphicon glyphicon-shopping-cart"></span>
                                    <span id="cart-nav-quantity-elements">

                                        <span id="koszyk-naglowek-ilosc-elementow">@Html.Action("DownloadQuantityElements", "Cart") </span>
                                    </span> items <span class="caret"></span>

                                </a>
                                <ul class="dropdown-menu dropdown-cart" role="menu">
                                    <li>
                                        <span class="item">
                                            <span class="item-left">
                                                <img src="http://lorempixel.com/50/50/" alt="" />
                                                <span class="item-info">
                                                    <span>Item name</span>
                                                    <span>23$</span>
                                                </span>
                                            </span>
                                            <span class="item-right">
                                                <button class="btn btn-xs btn-danger pull-right">x</button>
                                            </span>
                                        </span>
                                    </li>
                                    <li class="divider"></li>
                                    <li><a class="text-center" href="">View Cart</a></li>
                                </ul>
                            </li>
                        </ul>

                    </div>
                    <!-- /.navbar-collapse -->
                </div>

                    <!-- /.container -->
                </nav>


    </header>

    <div>
        @RenderBody()
    </div>



    <footer class="modal-footer">
        <nav>

            <ul class="nav navbar-nav">
                <li>
                    <a href="@Url.Action("StaticSites","Home", new { nazwa = "About" }) " style=""> Informacje</a>
                </li>
                <li>
                    <a href="@Url.Action("StaticSites","Home", new { nazwa = "Contact" }) " style=""> Kontakt</a>
                </li>
            </ul>

        </nav>
        <p class="text-right">
            &copy; @DateTime.Now.Year — Łukasz Kaczmarek aplikacja platformy ASP.NET
        </p>
    </footer>
    @Scripts.Render("~/bundles/jqueryAndJqueryUI")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("Scripts", required: false)
</body>
</html>