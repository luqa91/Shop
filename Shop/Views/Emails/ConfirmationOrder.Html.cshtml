@model Shop.ViewModels.ConfirmationOrderEmail
Content-Type: text/html; charset=utf-8

<html>
<body>

    @Html.EmbedImage("~/content/Img/Logo.png")

    <p>Dziękujemy!</p>
    <p>Złożyłeś zamówienie w serwisie Shop.</p>
    <p>Zamówione pozycje :</p>

    @{
        IEnumerable<Shop.Models.PositionOrder> positionorder = Model.PositionOrder ;

        for (int i = 0; i < positionorder.Count(); i++)
        {
            <p>
                @positionorder.ElementAt(i).product.Title - @positionorder.ElementAt(i).product.Company
                - @positionorder.ElementAt(i).product.PriceProduct zł. - @positionorder.ElementAt(i).Quantity szt.
            </p>
            <p>
                html embed
            </p>
        }
    }

    <p>Prosimy o przelanie kwoty @Model.Value zł, tytułem: "zamówienie nr @Model.NumberOrder" na nasze konto bankowe:</p>
    <p>Praktyczne kursy Sp. z o.o</p>
    <p>ul. Mila 16/11</p>
    <p>40-678 Tychy</p>
    <p>PKO BP 10 0000 0000 0000 0000 0000 </p>

    <p>Zaraz po otrzymaniu środków uzyskasz pełny dostęp do kursu</p>
    <p>Dziękujemy i zapraszamy ponownie!</p>
    <p>PraktyczneKursy.pl</p>


</body>

</html>